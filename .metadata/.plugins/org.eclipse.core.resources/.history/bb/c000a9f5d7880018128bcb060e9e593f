	<script type="text/javascript">
        var $textarea = $(".editArea textarea");
        var $contentDiv = $(".editArea div");
        var $answertype = $("#cph_ddlreply_form");
        var $NewsId = $("#cph_hfNewsId");

        //回复类型切换界面
        function GetType(n) {
            $("#textreply").hide();
            $("#multiArticle").hide();
            $("#duokefu").hide();
           // $("#_business").hide();
            if (n == "mainMenu") {
                //$("#mpmenu").show();
            } else if (n == "1") {//文本
                $("#textreply").show();
            } else if (n == "2") {//图文
                $("#multiArticle").show();
                var r = /^\+?[1-9][0-9]*$/;
                if(r.test('${res.replyMsg}')){
                	 GetBindDataShow(${(res.replyMsg)!});
                }
            } else if(n=="business"){
            	$("#_business").show();
            }else{
           		 $("#textreply").hide();
            	$("#multiArticle").hide();
            	$("#duokefu").hide();
            	$("#_business").hide();
            }
        }

		//提交数据时
        function GetBtn() {
            if ($("#_meunName").val() == "") {
                alert("菜单名不能为空！");
                $("#_meunName").focus();
                return false;
            }
            else if (parseInt($("#_sortNum").val()) != $("#_sortNum").val()) {
                alert("菜单排序只能为数字！");
                $("#_sortNum").focus();
                return false;
            }
            if($("#_genre").val()=="1"){//1 视图，2事件
	             if($("#_url").val()==""){
	             	 alert("视图类型的菜单，URL不能为空！");
	                 $("#_url").focus();
	                return false;
	             }
            }
            if($("#_genre").val()=="3"){//3 扫码跳转的url，
             if($("#_url").val()==""){
             	 alert("URL不能为空！");
                 $("#_url").focus();
                 
                return false;
             }
              
            }
             if($("#_genre").val()=="4"){//4跳转小程url
	             if($("#_url").val()==""){
	             	 alert("URL不能为空！");
	                 $("#_url").focus();
	                return false;
	             }
	             if($("#pagepath").val()==""){
	             	 alert("pagepath不能为空！");
	                 $("#pagepath").focus();
	                 
	                return false;
	             }
	             if($("#xcxAppid").val()==""){
	             	 alert("xcxAppid不能为空！");
	                 $("#xcxAppid").focus();
	                 
	                return false;
	             }
            }
            return true;
        }
        
	function changeType(n){
		debugger;
		$("#_inputUrl").hide();
		$("#_inputKey").hide();
		$("#_inputXxx").hide();
		if(n=="1" || n=="4"){//1视图  3扫码跳转url 4跳转小程序
			if(n=="4"){
				$("#_inputXxx").show();
			}
			$("#_inputUrl").show();
			GetType("null");
		}else if(n=="2" ||  n=="3" || n=="5"){//事件,扫码提示
			$("#_inputKey").show();
		}
	}
		
	
        $(function () {
	
            $textarea.change(function () {
                $contentDiv.html(Emotion.replaceEmoji($(this).val()));
                $(this).height($contentDiv.height());
            })

            $(".html_txet").click(function () {
                $(this).toggleClass("html_txet_co");
                $textarea.toggle();
                $contentDiv.toggle();
                $textarea.height($contentDiv.height());
                $('.phiz').toggle();
                $('.link').toggle();
            })
            if ($NewsId.val() != "0" && $answertype.val() == "2") {//图文
                GetBindDataShow($NewsId.val());
            }

            $contentDiv.html(Emotion.replaceEmoji($textarea.val()));
